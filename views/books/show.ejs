<body>
  <main class="container">
    <div class="showBook">

      <h1><%= book.title %></h1>

      <img src="<%= book.image %>" alt="<%= book.title %>'s image" class="bookImage" id="bookImageShow">

      <div class="authorstyle">
        <h4>Author:<h6><%= book.author %></h6></h4>
      </div>

      <div class="genrestyle">
        <h4>Genre:<h6><%= book.genre %></h6></h4>
      </div>

      <form method="POST" class="" action="/books/<%= book.id %>/comments">
        <div class="form-group">
          <label for="body">Please leave a comment about this book:</label>
          <textarea id="body" name="body" class="form-control"rows="8" cols="80"></textarea>
        </div>
        <input type="submit" name="" class="btn btn-default" value="Submit">
      </form>

      <ul>
        <% book.comments.forEach(comment => { %>
          <li><a href="/users/<%= comment.user._id %>"><%= comment.user.username %></a> &middot; <%= comment.body %></li>
          <% }) %>
        </ul>

      <div class="deleteBook">
        <form method="post" action="/books/<%= book.id %>">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" class="btn btn-default" value="Delete">
        </form>
      </div>

      <div class="editBook">
        <button class="btn btn-default"> <a href="/books/<%= book._id %>/edit"</a>Edit</button>
      </div>
